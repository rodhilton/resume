  def latex_links(one)
    one.gsub(/<a href=(["'])(.*?)\1>(.*?)<\/a>/, "\\Colorhref{\\2}{\\3}")
  end

  def latex_desc(bla)
    bla.gsub(/%/, "\\%")
  end
%>



