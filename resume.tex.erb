\begin{document}
%\begin{CJK*}{UTF8}{gbsn}                          % to typeset your resume in Chinese using CJK
%-----       resume       ---------------------------------------------------------
\makecvtitle

\section{Summary}
<% summary.each do |summary_item| %>
  \cvitem{}{<%= summary_item %>}
<% end %>

\section{Skills}
<% u_skills = unique_skills(skills) %>
\cvitem{Accomplished}{<%= skill_list(u_skills, 7, 10).gsub(/\#/, "\\#") %>}
\cvitem{Advanced}{<%= skill_list(u_skills, 5, 6).gsub(/\#/, "\\#") %>}
\cvitem{Novice}{<%= skill_list(u_skills, 0, 4).gsub(/\#/, "\\#") %>}

\section{Experience}
<% job_list = flags[:complete_history] ? experience.jobs : trim_jobs(experience.jobs) %>

<% job_list.each do |job| %>
  <% accomplishments = flags[:complete_history] ? job.accomplishments : trim_accomplishments(job.accomplishments) %>
\begin{minipage}{\linewidth} 
\cventry{<%= job.time %>}{<%= job.title %>}{<%= job.company %>}{<%= job.location %>}{}{ %
\begin{itemize}%
\footnotesize <% accomplishments.each do |accomplishment| %> \item <%= latex_links(latex_desc(accomplishment)) %><% end %>
\end{itemize}}
\end{minipage}
\vspace{1mm}
<% end %>

<% if flags[:certifications] %>
\section{Certifications}
<% certifications.each do |certification| %>\cvitem{<%= certification.time %>}{<%= certification.title %>\textit{<%= ", #{certification.subject}" if certification.subject %>}} 
<% end %>
<% end %>


\section{Education}
<% education.degrees.each do |degree| %>
\begin{minipage}{\linewidth}
\cventry{<%= display_schoolyear(degree, flags[:expand_school ],"","") %>}{<%= degree.title %>}{<%= degree.school %>}{<%= degree.location %>}{}{% <% if flags[:expand_school ]%>
\begin{itemize}%
\scriptsize
    \item <%= latex_links(degree.note) %>
    \item Coursework: <%= degree.coursework %>
\end{itemize}}
\vspace{1mm}
<% else %> 
}
<% end %>
\end{minipage}
<% end %>

\end{document}


