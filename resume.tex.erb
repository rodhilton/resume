<% load 'common.rb' %>

<% 
  def latex_links(one)
    one.gsub(/<a href=(["'])(.*?)\1>(.*?)<\/a>/, "{\\Colorhref{\\2}{\\3}}")
  end

  def strip_links(one)
    one.gsub(/<a href=(["'])(.*?)\1>(.*?)<\/a>/, "\\3")
  end

%>

