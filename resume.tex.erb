<% load 'common.rb' %>

<% 
  def latex_links(one)
    one.gsub(/<a href=(["'])(.*?)\1>(.*?)<\/a>/, "\\Colorhref{\\2}{\\3}")
  end

  def latex_desc(bla)
    bla.gsub(/%/, "\\%")
  end
%>

\documentclass[12pt,letter,roman]{moderncv}        % possible options include font size ('10pt', '11pt' and '12pt'), paper size ('a4paper', 'letterpaper', 'a5paper', 'legalpaper', 'executivepaper' and 'landscape') and font family ('sans' and 'roman')



% moderncv themes
\moderncvstyle{casual}                             % style options are 'casual' (default), 'classic', 'oldstyle' and 'banking'
%\moderncvcolor{blue}                               % color options 'blue' (default), 'orange', 'green', 'red', 'purple', 'grey' and 'black'
%\renewcommand{\familydefault}{\sfdefault}         % to set the default font; use '\sfdefault' for the default sans serif font, '\rmdefault' for the default roman one, or any tex font name
\nopagenumbers{}                                  % uncomment to suppress automatic page numbering for CVs longer than one page
\usepackage{xcolor}
\usepackage{ifthen}

% Color name conventions used by the moderncv package
\definecolor{color0}{rgb}{0,0,0}% black
\definecolor{color1}{RGB}{71,134,178}% light blue
\definecolor{color2}{RGB}{68, 68, 68}% dark grey
%\definecolor{color3}{RGB}{51, 98, 127}% dark grey

\newcommand\Colorhref[3][color1]{\href{#2}{\color{#1}#3}}

% adjust the page margins
\usepackage[scale=0.85]{geometry}
\setlength{\hintscolumnwidth}{3cm}                % if you want to change the width of the column with the dates
%\setlength{\makecvtitlenamewidth}{10cm}           % for the 'classic' style, if you want to force the width allocated to your name and avoid line breaks. be careful though, the length is normally calculated to avoid any overlap with your personal info; use this at your own typographical risks...

% personal data
\firstname{<%= name.split(/\s+/)[0] %>}
\familyname{<%= name.split(/\s+/)[1] %>}
\title{<%= title %>}
\ifthenelse{\not\equal{<%= flags[:phone] %>}{}}{\phone{<%= flags[:phone] %>}}{}
\ifthenelse{\not\equal{<%= flags[:email] %>}{}}{\email{<%= flags[:email] %>}}{}
\homepage{<%= site %>}
\ifthenelse{\equal{<%= flags[:photo] %>}{}}{}{\photo[28pt][0pt]{<%= flags[:photo] %>}}

\begin{document}

\makecvtitle

\section{Summary}
<% summary.each do |summary_item| %>
  \cvitem{$\color{color1}{\circ}$}{<%= summary_item %>}
<% end %>

\section{Skills}
<% u_skills = unique_skills(skills) %>
\cvitem{Accomplished}{<%= skill_list(u_skills, 7, 10).gsub(/\#/, "\\#") %>}
\cvitem{Advanced}{<%= skill_list(u_skills, 5, 6).gsub(/\#/, "\\#") %>}
\cvitem{Novice}{<%= skill_list(u_skills, 0, 4).gsub(/\#/, "\\#") %>}

\section{Experience}
<% job_list = flags[:complete_history] ? experience.jobs : trim_jobs(experience.jobs) %>

<% job_list.each do |job| %>
  <% accomplishments = flags[:complete_history] ? job.accomplishments : trim_accomplishments(job.accomplishments) %>
\begin{minipage}{\linewidth} 
\cventry{<%= job.time %>}{<%= job.title %>}{<%= job.company %>}{<%= job.location %>}{}{ %
\begin{itemize}%
\renewcommand{\labelitemi}{$\color{color1}{\triangleright}$} %
\footnotesize <% accomplishments.each do |accomplishment| %> \item <%= latex_links(latex_desc(accomplishment)) %><% end %>
\end{itemize}}
\end{minipage}
\vspace{1mm}
<% end %>

<% if flags[:certifications] %>
\section{Certifications}
<% certifications.each do |certification| %>\cvitem{<%= certification.time %>}{<%= certification.title %>\textit{<%= ", #{certification.subject}" if certification.subject %>}} 
<% end %>
<% end %>


\section{Education}
<% education.degrees.each do |degree| %>
\begin{minipage}{\linewidth}
\cventry{<%= display_schoolyear(degree, flags[:expand_school ],"","") %>}{<%= degree.title %>}{<%= degree.school %>}{<%= degree.location %>}{}{% <% if flags[:expand_school ]%>
\begin{itemize}%
\renewcommand{\labelitemi}{$\color{color1}{\triangleright}$} %
\footnotesize
    \item <%= latex_links(degree.note) %>
    \item Coursework: <%= degree.coursework %>
\end{itemize}}
\vspace{1mm}
<% else %> 
}
<% end %>
\end{minipage}
<% end %>

\section{Publications}
<% unless publications.author.size.nil? %>
  <% publications.author.each do |pubs| %>
  \cvitem{Author}{\textbf{<%= latex_links(latex_desc(pubs.title)) %>}, \textit{<%= pubs.publisher %>}, <%= pubs.time %> }
  <% end %>
<% end %>
<% unless publications.editor.size.nil? %>
  <% publications.editor.each do |pubs| %>
  \cvitem{Tech. Editor}{\textbf{<%= latex_links(latex_desc(pubs.title)) %>}, \textit{<%= pubs.publisher %>}, <%= pubs.time %> }
  <% end %>
<% end %>

\end{document}
