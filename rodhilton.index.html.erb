<!DOCTYPE html>
<% load 'common.rb' %>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="<%= name %>'s - <%= title %>">
    <meta name="author" content="<%= name %>">

    <title><%= name %></title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.2/css/bootstrap.min.css" />

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/devicons/1.8.0/css/devicons.min.css" />

    <!-- Custom styles for this template -->
    <link href="css/resume.css" rel="stylesheet">

    <link rel="shortcut icon" type="image/png" href="img/icon.png"/>

  </head>

  <body id="page-top">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
      <a class="navbar-brand js-scroll-trigger" href="#page-top">
        <span class="d-block d-lg-none"><%= name %></span>
        <span class="d-none d-lg-block">
          <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="img/profile.jpg" alt="">
        </span>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#experience">Experience</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#education">Education</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#skills">Skills</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="#contact">Contact</a>
          </li>
          <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="http://www.nomachetejuggling.com">Blog</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid p-0">

      <section class="resume-header p-3 p-lg-5 d-flex flex-column" style="background-image: url('img/rod.jpg'); min-height: 35vh"></section>

      <section class="resume-section p-3 p-lg-5 d-flex d-column" style="min-height: 65vh !important" id="about">
        <div class="my-auto">
          <h1 class="mb-0"><%= name.split(/\s+/)[0] %>
            <span class="text-primary"><%= name.split(/\s+/)[1] %></span>
          </h1>
          <div class="subheading mb-5">
            <%= title %>
          </div>
            <ul class="mb-5">
              <% about_summary.each do |summary_item| %>
                  <li><%= summary_item %></li>
              <% end %>
            </ul>
          <div class="social-icons">
            <a href="http://www.twitter.com/rodhilton"><i class="fab fa-twitter-square fa-2x"></i></a>
            <a href="http://www.facebook.com/rodhilton"><i class="fab fa-facebook-square fa-2x"></i></a>
            <a href="http://www.linkedin.com/in/rodhilton"><i class="fab fa-linkedin fa-2x"></i></a>
            <a href="http://www.github.com/rodhilton"><i class="fab fa-github-square fa-2x"></i></a>
            <a href="http://www.goodreads.com/user/show/1499157-rodhilton-hilton"><i class="fab fa-goodreads fa-2x"></i></a>
          </div>
        </div>
      </section>

      <section class="resume-separator p-3 p-lg-5 d-flex flex-column" id="experience_separator"></section>

      <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
        <div class="my-auto">
          <h2 class="mb-5">Experience</h2>
          <p><%= experience.summary %></p>
          <br/>
          <% job_list = trim_jobs(experience.jobs, 15) %>
          <% job_list.each do |job| %>
            <div class="resume-item d-flex flex-column flex-md-row mb-5">
              <div class="resume-content mr-auto">
                <h3 class="mb-0"><%= job.title %> (<%= job.time %>)</h3>
                <div class="subheading mb-3"><%= job.company %><% unless job.note.nil? %> (<%= job.note %>)<% end %></div>
                <p><%= job.summary %></p>
              </div>
              <div class="resume-date text-md-right">
                <p><img class="icon" src="img/<%= job.icon %>"/></p>
              </div>
            </div>
          <% end %>
        </div>
      </section>

      <section class="resume-separator p-3 p-lg-5 d-flex flex-column" id="education_separator"></section>

      <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="education">
        <div class="my-auto">
          <h2 class="mb-5">Education</h2>
          <p><%= education.summary %></p>
          <br/>
          <% education.degrees.each do |degree| %>
            <div class="resume-item d-flex flex-column flex-md-row mb-5">
              <div class="resume-content mr-auto">
                <h3 class="mb-0"><%= degree.title %> <%= display_schoolyear(degree) %></h3>
                <div class="subheading mb-3"><%= degree.school %></div>
                <p><%= degree.note %></p>
              </div>
              <div class="resume-date text-md-right">
                <p><img class="icon" src="img/<%= degree.icon %>"/></p>
              </div>
            </div>
          <% end %>
        </div>
      </section>

      <section class="resume-separator p-3 p-lg-5 d-flex flex-column" id="skills_separator"></section>

      <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="skills">
        <div class="my-auto">
          <h2 class="mb-5">Skills</h2>
          <div class="skill-icons">
            <% 
               skills = calculate_skills(experience.jobs)
               ordered_skills = skills[:accomplished].split(", ") + skills[:advanced].split(", ") + skills[:novice].split(", ")
            %>
            <% ordered_skills.each do |skillname| %>
            <span title="<%= skillname %>" class="devicons devicons-<%= skillname.downcase %>">
            <% end %>
          </div>
        </div>
      </section>
    
      <section class="resume-separator p-3 p-lg-5 d-flex flex-column" id="contact_separator"></section>

      <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="contact">
        <div class="my-auto">
          <h2 class="mb-5">Contact</h2>
          

          <div class="row">
            <div class="col-sm">
          <form class="jotform-form" action="https://submit.jotform.us/submit/81960236303149/" method="post" name="form_81960236303149" id="81960236303149" accept-charset="utf-8">
            <input type="hidden" name="formID" value="81960236303149" />

            <div class="form-group">
              <label for="input_6">Your Name:</label>
              <input type="text" class="form-control" id="input_6" name="q6_name">
            </div>

            <div class="form-group">
              <label for="input_4">Your E-Mail:</label>
              <input type="email" class="form-control" id="input_4" name="q4_email">
            </div>

            <div class="form-group">
              <label for="input_5">Message:</label>
              <textarea class="form-control" rows="6" id="input_5" name="q5_typeA" ></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

            <script>
            JotForm.showJotFormPowered = "0";
            </script>
            <input type="hidden" id="simple_spc" name="simple_spc" value="81960236303149" />
            <script type="text/javascript">
            document.getElementById("si" + "mple" + "_spc").value = "81960236303149-81960236303149";
            </script>
          </form>

            </div>
            <div class="col-sm" id="map">
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d195870.55020808586!2d-105.21155058164126!3d39.90833261031448!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMznCsDU0JzIwLjUiTiAxMDXCsDA1JzI0LjEiVw!5e0!3m2!1sen!2sus!4v1531755866376" width="100%" height="425" frameborder="0" style="border:1px solid #ddd" allowfullscreen></iframe>
            </div>
          </div>

        </div>
      </section>

    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="js/resume.js"></script>

  </body>

</html>
