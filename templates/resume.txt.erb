<%- load 'lib/common.rb' -%>
<%-
def markdown_links(one)
    one.gsub(/<a href=(["'])(.*?)\1>(.*?)<\/a>/, "[\\3](\\2)")
end

def strip_links(one)
    one.gsub(/<a href=(["'])(.*?)\1>(.*?)<\/a>/, "\\3")
end
-%>
